<div class="rounded-lg border bg-card text-card-foreground shadow-sm overflow-hidden mx-auto w-full">
    <img class="w-full h-[200px] object-cover" src="/images/{{@article.img}}" alt="{{@article.title}}">
    <div class="flex flex-col px-6 py-4 gap-4">
        <div class="font-bold text-xl mb-2">{{@article.title}}</div>
        <p class="text-sm text-muted-foreground min-h-[40px]">{{@article.shortContent}}</p>
        <div class="flex flex-col gap-2 mt-auto">
            <Tag @class="!text-sm" @label="Autor" @value={{@article.author}} />
            <Tag @class="!text-sm" @label="Categorie" @value={{@article.category}} />
            <Tag @class="!text-sm" @label="Data" @value={{@article.date}} />
            <LinkTo id={{@article.id}} @route="article" @model={{@article}} class="button" data-variant="default">
                Details
            </LinkTo>
        </div>
    </div>
</div>