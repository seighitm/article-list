<div class="relative inline-block {{@class}}">
    <button class="button bg-blue-500 text-white border-none py-2 px-4 rounded cursor-pointer text-lg ml-auto !p-0"
        type="button" data-variant="default" data-size="icon" {{on 'click' this.copyLink}} {{on "mouseenter"
        this.showTooltip}} {{on "mouseleave" this.hideTooltip}}>
        {{#if this.isCopied}}
        <Icons::CheckIcon />
        {{else}}
        <Icons::CopyIcon />
        {{/if}}
    </button>
    {{#if this.isCopied}}
    <div class=" absolute top-[-35px] left-1/2 transform -translate-x-1/2 bg-gray-800 text-white text-center py-1 px-2 rounded text-sm whitespace-nowrap z-10 transition-opacity transition-all duration-300 ease-in-out"
        data-active={{this.isCopied}}>
        Copied
    </div>
    {{/if}}
</div>